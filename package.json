{
  "name": "react-pos-system",
  "private": true,
  "version": "1.0.0",
  "description": "Point of Sale Management System v1.0.0 by AOG Tech is a retail-focused solution designed to simplify and automate sales, inventory, and customer transactions. Built for small to medium-sized retail businesses.",
  "author": "AOG Tech",
  "homepage": "./",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "tsc && vite build --mode production",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/assets/*.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "serve": "vite preview --port 3000 --host",
    "serve:dist": "npx serve dist -s -p 3000 --cors",
    "package": "npm run build:prod && npm run package:zip",
    "package:zip": "npx bestzip pos-system-v1.0.0.zip dist/*",
    "deploy:local": "npm run build && npm run serve:dist",
    "deploy:offline": "powershell -ExecutionPolicy Bypass -File ./deploy-offline.ps1",
    "deploy:portable": "powershell -ExecutionPolicy Bypass -File ./scripts/create-portable-simple.ps1",
    "deploy:quick": "powershell -ExecutionPolicy Bypass -File ./deploy-offline.ps1 -AutoStart -NoInteraction",
    "clean": "rimraf dist",
    "preinstall": "npx only-allow npm"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "dexie": "^4.0.11",
    "file-saver": "^2.0.5",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.6.0",
    "lucide-react": "^0.294.0",
    "node-machine-id": "^1.1.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.20.1",
    "react-to-print": "^2.14.15",
    "recharts": "^2.8.0",
    "tailwindcss": "^3.3.6",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/file-saver": "^2.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/uuid": "^9.0.7",
    "@types/web-bluetooth": "^0.0.21",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "bestzip": "^2.2.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.10",
    "serve": "^14.2.4",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-bundle-analyzer": "^0.7.0"
  }
}
